{
    "name": "arkecosystem/client",
    "description": "A simple PHP API client for the Ark Blockchain.",
    "keywords": ["api", "ark", "blockchain", "crypto", "currency"],
    "license": "MIT",
    "authors": [{
        "name": "Brian Faust",
        "email": "brian@ark.io",
        "homepage": "https://github.com/faustbrian"
    }],
    "require": {
        "php": "^7.2|^7.4|^8.0",
        "guzzlehttp/guzzle": "^6.5|^7.0",
        "illuminate/support": "^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "pestphp/drift": "^0.3.0",
        "pestphp/pest": "^0.3.8",
        "phpunit/phpunit": "^9.3.10"
    },
    "suggest": {
        "ext-mbstring": "If ext-mbstring is not available you MUST install symfony/polyfill-mbstring"
    },
    "autoload": {
        "psr-4": {
            "ArkEcosystem\\Client\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArkEcosystem\\Tests\\Client\\": "tests"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "scripts": {
        "format": [
            "vendor/bin/php-cs-fixer fix"
        ],
        "test": [
            "./vendor/bin/pest --coverage --min=100 --coverage-html=.coverage --coverage-clover=coverage.xml"
        ]
    }
}
