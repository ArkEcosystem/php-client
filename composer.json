{
    "name": "arkecosystem/client",
    "description": "A simple PHP API client for the Ark Blockchain.",
    "keywords": [
        "api",
        "ark",
        "blockchain",
        "crypto",
        "currency"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Brian Faust",
            "email": "brian@ark.io",
            "homepage": "https://github.com/faustbrian"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.8",
        "illuminate/support": "^11.10"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.58",
        "pestphp/pest": "^2.34",
        "phpunit/phpunit": "^10.5"
    },
    "suggest": {
        "ext-mbstring": "If ext-mbstring is not available you MUST install symfony/polyfill-mbstring"
    },
    "autoload": {
        "psr-4": {
            "ArkEcosystem\\Client\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArkEcosystem\\Tests\\Client\\": "tests"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "scripts": {
        "format": [
            "vendor/bin/php-cs-fixer fix"
        ],
        "test": [
            "./vendor/bin/pest --coverage --min=100 --coverage-html=.coverage --coverage-clover=coverage.xml"
        ]
    }
}
